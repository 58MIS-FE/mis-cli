#!/usr/bin/env node

const program = require('commander');

const { resolve } = require('path');

const result = command => resolve(__dirname, '../lib/commands/', command);
// 定义当前版本
program
    .version(require('../package').version);

// 定义使用方法
program
    .usage('<command>');


program
    .command('init')
    .description('使用MIS-CLI创建一个新项目')
    .option('-f, --force', '如果目标目录存在，强制覆盖')
    .option('-c, --clone', '在获取远程预置时使用Git克隆')
    .action((...args) => {
        require(result('create'))(args);
    });



program.parse(process.argv);

if (!program.args.length) {
    program.help();
}